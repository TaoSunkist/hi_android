<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.taosunkist.hello.ui.testrecyclerview.TestRecyclerView
            android:id="@+id/test_recycler_view"
            android:name="me.taosunkist.hello.ui.testrecyclerview.TestRecyclerViewFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.testrecyclerview.TestRecyclerViewFragment"
            tools:listitem="@layout/fragment_item_test_recycler_view_list" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refresh_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_xlarge"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
